{
  "name": "ingredients-formatter",
  "displayName": "Ingredients Formatter",
  "description": "Formatter for food ingredient lists",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:off"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "off",
        "extensions": [
          ".off"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "[off]": {
        "editor.formatOnSave": true
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "eslint": "^8.47.0"
  }
}
